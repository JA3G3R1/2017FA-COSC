          
           SqlConnection connection = new SqlConnection();
            //Server=myServerAddress;Database=myDataBase;User Id=myUsername;Password = myPassword;
            connection.ConnectionString = "Server=cis1.actx.edu;Database=project2;User Id=db2;Password = db20;";
            connection.Open();
            Console.WriteLine(connection.ServerVersion);
            Console.ReadKey();
            
            // Get all the records in db_owner.Participant
            SqlCommand getAllParticipants = connection.CreateCommand();
            getAllParticipants.CommandText = "select * from Participant;";

            // read out all the participants in the database
            using(SqlDataReader reader = getAllParticipants.ExecuteReader())
            {
                string rec = "";
                while (reader.Read())
                {
                    // read collum 2
                    rec = reader.GetString(1) + " ";
                    // read collum 3
                    rec += reader.GetString(2); 
                    Console.WriteLine(rec);
                }
            }
            Console.ReadKey(); 
